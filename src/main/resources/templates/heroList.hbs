{{#partial "content"}}

    <h1>Hero list!</h1>
    {{#if heroes}}
        <p>Current Heroes:</p>
        {{#each heroes }}
            <div class="card">
                <div class="card-header">
                    Quote
                </div>
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p> {{ name }} </p>
                        <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></footer>
                    </blockquote>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>No heroes to show!</p>
    {{/if}}

    <div>
        <p><a href="/heroes/new">Create new Hero</a></p>
    </div>





{{/partial}}

{{> layout.hbs}}