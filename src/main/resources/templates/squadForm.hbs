{{#partial "content"}}
    <div>
        <form>
            <div class="form-group">
                <label for="exampleFormControlInput1">Email address</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Example select</label>
                <select class="form-control" id="exampleFormControlSelect1">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect2">Example multiple select</label>
                <select multiple class="form-control" id="exampleFormControlSelect2">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Example textarea</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
        </form>
    </div>




    {{#if editSquad}}
        <h1>Edit Squad Name</h1>
        <form action="/heroes/{{editSquad.id}}/update" method="post">
            <label for="content">Edit Squad name</label>
            <input id="name" name="name" type="text" value="{{editSquad.name}}">


    {{else}}
        <h1>Add a new Hero</h1>

        <form action="/squads/new" method="post">

            <div class="form-group">
                <label for="name" class="col-sm-2 col-form-label">Suqad name</label>
                <div class="col-sm-10">
                    <input id="name" class="form-control-plaintext" name="name" type="text">
                </div>
            </div>

            <div class="form-group">
                <label for="size" class="col-sm-2 col-form-label">Squad Size</label>
                <div class="col-sm-10">
                    <input id="size" class="form-control-plaintext" name="size" type="text">
                </div>
            </div>

            <div class="form-group">
                <label for="cause" class="col-sm-2 col-form-label">Squad Caues</label>
                <div class="col-sm-10">
                    <input id="cause" class="form-control-plaintext" name="cause" type="text">
                </div>
            </div>

    {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
    </form>
{{/partial}}

{{> layout.hbs}}