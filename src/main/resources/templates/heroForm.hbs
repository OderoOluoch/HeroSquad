{{#partial "content"}}

    {{#if editHero}}
        <h1>Edit Hero Name</h1>
        <form action="/heroes/{{editHero.id}}/update" method="post">
            <label for="content">Edit Hero's name</label>
            <input id="name" name="name" type="text" value="{{editHero.name}}">
        </form>

    {{else}}
            <h1>Add a new Hero</h1>

        <form action="/heroes/new" method="post">
            <label for="content">Post Content</label>
            <input id="content" name="content" type="text">
    {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
        </form>
{{/partial}}

{{> layout.hbs}}