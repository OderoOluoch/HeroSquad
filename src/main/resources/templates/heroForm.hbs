{{#partial "content"}}

    <div>
        <form>
            <div class="form-group">
                <label for="exampleFormControlInput1">Email address</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Example select</label>
                <select class="form-control" id="exampleFormControlSelect1">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect2">Example multiple select</label>
                <select multiple class="form-control" id="exampleFormControlSelect2">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Example textarea</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
        </form>
    </div>

    {{#if editHero}}
        <h1>Edit Hero Name</h1>
        <form action="/heroes/{{editHero.id}}/update" method="post">
            <label for="content">Edit Hero's name</label>
            <input id="name" name="name" type="text" value="{{editHero.name}}">


    {{else}}
            <h1>Add a new Hero</h1>

        <form action="/heroes/new" method="post">

                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label">Hero name</label>
                    <div class="col-sm-10">
                        <input id="name" class="form-control-plaintext" name="name" type="text">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="age" class="col-sm-2 col-form-label">Hero Age</label>
                    <div class="col-sm-10">
                        <input id="age" class="form-control-plaintext" name="age" type="text">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="weakness" class="col-sm-2 col-form-label">Hero weakness</label>
                    <div class="col-sm-10">
                        <input id="weakness" class="form-control-plaintext" name="weakness" type="text">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="power" class="col-sm-2 col-form-label">Hero Known Power</label>
                    <div class="col-sm-10">
                        <input id="power" name="power" class="form-control-plaintext" type="text">
                    </div>
                </div>

    {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
        </form>
{{/partial}}

{{> layout.hbs}}